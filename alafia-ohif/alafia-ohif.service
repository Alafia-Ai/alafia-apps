[Unit]
Description=OHIF Viewer Docker container to provide visualization of DICOM images
Requires=alafia-home.service
After=alafia-home.service
StartLimitInterval=350
StartLimitBurst=10

[Service]
Restart=on-failure
RestartSec=30
ExecStart=/usr/bin/docker compose -f /opt/alafia-ai/alafia-ohif/docker-compose-alafia-ohif.yml up 

[Install]
WantedBy=multi-user.target
