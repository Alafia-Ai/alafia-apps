[Unit]
Description=Bento Docker container to provide home page for web apps
Requires=alafia-start-caddy.service
After=alafia-start-caddy.service
StartLimitInterval=350
StartLimitBurst=10

[Service]
Restart=on-failure
RestartSec=30
ExecStart=/usr/bin/docker compose -f /opt/alafia-ai/alafia-home/docker-compose.alafia-home.yml up 

[Install]
WantedBy=multi-user.target
