[Unit]
Description=Caddy Docker container to serve web apps on localhost
Requires=alafia-start-binfmt.service
After=alafia-start-binfmt.service
StartLimitInterval=350
StartLimitBurst=10

[Service]
Restart=on-failure
RestartSec=30
ExecStart=/usr/bin/docker compose -f /opt/alafia-ai/alafia-start/docker-compose.alafia-start.yml up 

[Install]
WantedBy=multi-user.target
